<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">

  <CommandSet xml:lang="en-us" Name="MirrorCommandSet_en-us">
    <AppName> Mirror </AppName>
    <Example> Change my name </Example>

    <Command Name="openSettings">
      <Example> Open Settings </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> show [my] settings </ListenFor>
      <ListenFor RequireAppName="ExplicitlySpecified"> show [my] {builtin:AppName} settings </ListenFor>
      <Feedback> Requisiting settings </Feedback>
      <Navigate />
    </Command>

    <Command Name="changeName">
      <Example> Add a new user </Example>
      <ListenFor RequireAppName="BeforeOrAfterPhrase"> add [a] [new] user</ListenFor>
      <Feedback> Changing Name </Feedback>
      <VoiceCommandService Target="MirrorVoiceCommandService" />
    </Command>
  </CommandSet>

