<Page
    x:Class="MagicMirror.UniversalApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:VM="using:MagicMirror.UniversalApp.ViewModels"
    mc:Ignorable="d">

    <Page.DataContext>
        <VM:MainPageViewModel x:Name="vm" />
    </Page.DataContext>

    <Page.Resources>
        <Style TargetType="RelativePanel">
            <Setter Property="Padding" Value="20" />
        </Style>

        <Style x:Key="WeatherType" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FDF7C500"/>
            <Setter Property="FontStyle" Value="Italic"/>
        </Style>
    </Page.Resources>

    <RelativePanel Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Top left elements-->
        <TextBlock x:Name="LocationTextBox"
                   Text="{Binding Dto.WeatherModel.Name, FallbackValue='Montgomery'}" 
                   TextAlignment="Center"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Stretch">
        </TextBlock>

        <Image x:Name="WeatherImage"
               RelativePanel.Below="LocationTextBox"
               Stretch="None"
               Source="{Binding MagicMirrorDto.WeatherModel.Icon}"
               HorizontalAlignment="Center"
               VerticalAlignment="Center">
        </Image>

        <TextBlock x:Name="WeatherTypeTextBox"
                   RelativePanel.Below="WeatherImage"
                   Text="{Binding Compliment, FallbackValue='Bar'}" >

        </TextBlock>

    </RelativePanel>
</Page>